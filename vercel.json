{
    "version": 2,
    "builds": [
      {
        "src": "frontend/dist/**",
        "use": "@vercel/static"
      },
      {
        "src": "backend/api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api/$1.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/dist/$1"
      }
    ],
    "env": {
      "GOOGLE_CLIENT_ID": "@google-client-id",
      "GOOGLE_CLIENT_SECRET": "@google-client-secret",
      "FRONTEND_URL": "@frontend-url"
    }
  }